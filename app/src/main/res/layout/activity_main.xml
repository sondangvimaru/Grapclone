<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:id="@+id/root_view"
    android:background="#03AFE8">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/backgroud_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/tx" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-30dp"
        android:src="@drawable/img_avatar"
        android:id="@+id/img_avartar"
        android:layout_marginBottom="0dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#F5F5F5"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"

    android:textSize="30sp"
    android:textColor="#F50404"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_below="@+id/img_avartar"
    android:id="@+id/tv_title"
    android:layout_marginTop="-40dp"
/>

<Button
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:id="@+id/btn_login"
    android:text="login"
    android:drawableStart="@drawable/icon"
    android:background="@drawable/backgroundbutton"
    android:textSize="20sp"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    android:layout_marginBottom="180dp"
    />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_singup"
        android:text="register"
        android:drawableStart="@drawable/signup"
        android:background="@drawable/backgroundbutton"
        android:textSize="20sp"
        android:textColor="#FDFDFD"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"

        />

</RelativeLayout>